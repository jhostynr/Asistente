<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcercaDeActivity">

    <ImageView
        android:id="@+id/regresar"
        android:src="@drawable/atras"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="left"/>

    <ImageView
        android:id="@+id/idUg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="80dp"
        android:padding="10dp"
        android:src="@drawable/admin2" />
    <ImageView
        android:id="@+id/idUg1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="240dp"
        android:layout_marginTop="80dp"
        android:padding="10dp"
        android:src="@drawable/admin1" />

    <TextView
        android:id="@+id/idTexto"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/idUg"
        android:paddingTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:justificationMode="inter_word"
        android:text="Esta aplicación fue desarrollada como trabajo de titulación para la carrera de Ing. en Sistemas Computacionales de la Universidad de Guayaquil
                              "/>

    <TextView
        android:id="@+id/idTexto1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTexto"
        android:paddingTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:justificationMode="inter_word"
        android:text="Autores: \n Justin Anibal Rivera Jordán \n David Joel Intriago Marquez"/>


    <ImageView

        android:id="@+id/idUniversidad"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/idTexto1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:src="@drawable/uni"
        android:onClick="onClick"
        />

</RelativeLayout>